<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xero Authentication Successful</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .container {
            text-align: center;
            background-color: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        #full-url {
            word-break: break-all;
            background-color: #f0f0f0;
            padding: 1rem;
            border-radius: 5px;
            margin: 1rem 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Xero Authentication Successful</h1>
        <p>Please copy the URL below and paste it back into the application:</p>
        <div id="full-url"></div>
        <button onclick="copyUrl()">Copy URL</button>
    </div>

    <script>
        function copyUrl() {
            const urlText = document.getElementById('full-url').innerText;
            navigator.clipboard.writeText(urlText).then(function() {
                alert('URL copied to clipboard!');
            }, function(err) {
                console.error('Could not copy text: ', err);
            });
        }

        document.addEventListener('DOMContentLoaded', (event) => {
            document.getElementById('full-url').innerText = window.location.href;
        });
    </script>
</body>
</html>
